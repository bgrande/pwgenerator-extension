{
  "name": "Vault-Generator",
  "version": "0.9.5",
  "manifest_version": 2,
  //"default_locale": "en",
  "author": "Benedikt Grande",

  "description": "Generates safe passwords for the web on the fly",

  "incognito": "split",

  "icons": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "32": "images/icon32.png",
      "19": "images/icon19.png",
      "16": "images/icon16.png"
  },
  "background": {
    "scripts": [
        "lib/core.js",
        "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
        "19": "images/icon19.png",
        "32": "images/icon32.png"
    },
    "default_title": "Reload Password Generator"
  },
  "content_scripts": [
      {
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "css": [
            "css/style.css"
        ],
        "js": [
            "lib/crypto-js-3.1.2.js",
            "lib/vault.js",
            "lib/core.js",
            "app/vault-generator.js",
            "app/generate.js"
        ],
        "run_at": "document_idle",
        "all_frames": true
      }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    "images/close.png"
  ],

  "options_page": "options.html"
}
