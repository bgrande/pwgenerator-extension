{
  "name": "Vault-Generator",
  "version": "0.8.9",
  "manifest_version": 2,

  "description": "Generates safe passwords for the web on the fly",

  "icons": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "32": "images/icon32.png",
      "19": "images/icon19.png",
      "16": "images/icon16.png"
  },
  "background": {
    "scripts": [
        "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
        "19": "images/icon19.png",
        "32": "images/icon32.png"
    },
    // @todo browser_action to catch cases where password and/or user field cannot/could not be guessed
    //"default_popup": "vault.html",
    "default_title": "Generate Password"
  },
  "content_scripts": [
      {
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "css": [
            "css/style.css"
        ],
        "js": [
            "lib/crypto-js-3.1.2.js",
            "lib/vault.js",
            "lib/core.js",
            "app/vault-generator.js"
        ],
        "run_at": "document_idle"
      }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    "images/close.png"
  ],

  "options_page": "options.html"
}
