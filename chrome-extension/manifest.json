{
  "name": "__MSG_extName__",
  "short_name": "EasyPassword",
  "version": "1.9.5
",
  "manifest_version": 2,
  "author": "Benedikt Grande",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "incognito": "split",
  "icons": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "32": "images/icon32.png",
      "19": "images/icon19.png",
      "16": "images/icon16.png"
  },
  "background": {
    "scripts": [
        "lib/core.js",
        "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
        "19": "images/icon19.png",
        "32": "images/icon32.png"
    },
    "default_title": "__MSG_extTitle__",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "css": [
            "css/reset.css",
            "css/style.css"
        ],
        "js": [
            "lib/crypto-js.js",
            "lib/vault.js",
            "lib/core.js",
            "lib/generator.js",
            "app/overlay.js",
            "lib/generator.js",
            "app/overlay.js",
            "app/generate.js"
        ],
        "run_at": "document_idle",
        "all_frames": true
      }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "images/close.png",
    "images/arrow-down.png",
    "images/arrow-up.png"
  ],
  "options_page": "options.html",
  "minimum_chrome_version": "29"
}
